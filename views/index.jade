extends layout

block content
    - var items = [{label:'Белки',classId: 'proteins'},{label:'Жиры',classId: 'triglyceride'},{label:'Углеводы',classId: 'carbohydrate'},{label:'Ккал',classId: 'calorie'}];
    - var daily = [{label:'Завтрак',classId: 'breakfast'},{label:'Ланч',classId: 'firstLunch'},{label:'Обед',classId: 'secondLunch'},{label:'Перекус',classId: 'thirdLunch'},{label:'Ужин',classId: 'dinner'},{label:'Перед сном',classId: 'secondDinner'}];
    div
        div(class='table')
            div(class='resultDish')
                    div
                        div(class='product')
                            each item in items
                                p(class='label') #{item.label}
                    div
                        div(class='product')
                            each item in items
                                p(class='#{item.classId} label') 0
            div(class='portion')
                div
                    div(class='product')
                        each item in items
                            p(class='label') #{item.label}
                div
                    div(class='product')
                        each item in items
                            p(class='#{item.classId} label') 0

        div(class='table')
            input(type='date' class='dailyDate')
        div(class='daily table')
            div(class='result')
                div(class='product')
                    p(class='label') Итог
                    p(class='description item') Описание
                    each item in items
                        p(class='#{item.classId} item') #{item.label}
            each item in daily
                div(class=item.classId)
                    div(class='product')
                        p(class='label') #{item.label}
                        input(class='description item' placeholder='Описание')
                        each item in items
                            input(class='#{item.classId} item' placeholder=item.label)
            div(class='newItem additionalProduct')
                div(class='product')
                    button(class='label addButton') +
                    input(class='description item' placeholder='Описание')
                    each item in items
                        input(class='#{item.classId} item' placeholder=item.label)


    div(class='currentDishProducts table')

    div(class='table allProducts')
        div(class='newProduct product')
            button(class='addProductButton item') +
            input(class="description item" placeholder="Имя")
            each item in items
                input(class='#{item.classId} item' placeholder=item.label)
        div
            select(class='sortBy product')
                option(value="description") Имя
                each item in items
                    option(value=item.classId) #{item.label}
            select(class='sortOrder product')
                option(value="greater") По возрастанию
                option(value="lower") По убыванию


        div(class='productsList')

    script.
        var addButton = $('.addProductButton');
        var newProduct = $('.newProduct');
        var productsList = $('.productsList');
        var products = [];
        var currentDishProducts = $('.currentDishProducts');
        var resultDish = $('.resultDish');
        var sortBy = $('.sortBy');
        var sortOrder = $('.sortOrder');

        var sortKey = sortBy.find('option:selected').val();
        var order = sortOrder.find('option:selected').val();

    script(src='utils.js')
    script(src='dailyView.js')
    script(src='products.js')

